/* miniprogram/pages/shopping/shopping.wxss */
.wrap{
  background: #f0f0f0;
  position: absolute;
  width: 100%;
  height:100vh;
  box-sizing: border-box;
}
.remind{
  margin-top:80rpx;
  display: block;
  height:240rpx;
  background: #fff;
  width: 100%;
  font-size: 32rpx;
  padding-left: 30rpx;
  padding-right: 30px;
}
.remind text{
  display: block;
  height:80rpx;
  line-height: 2.3;
}

.itemInfo{
  border-bottom: 1px solid #f0f0f0;
}

.status{
  text-align: center;
  width: 260rpx;
  height:80rpx;
  border-bottom:1px dashed #fff;
  display: block;
  margin-left:30%;
  font-size: 34rpx;
  line-height: 2.5;
}
.key{
  display: block;
  margin-top:30rpx;
  font-size: 80rpx;
  text-align: center;
  letter-spacing: 40rpx;
}


.card{

  text-align: center;
  color:white;
  background: rgb(100,181,191);
  height: 240rpx;
  width: 100%;
  margin:0rpx auto;
}

.advice{
  margin-top:60rpx;
  color:#aaa;
  padding-left: 30rpx;
  font-size: 32rpx;
  width: 100%;
  text-align: center;
}

.back{
  position: absolute;
  bottom:60rpx;
  margin-left: 30%;
  width:40%;
  height:30rpx;
  border-radius: 10rpx;
  background: #00a77b;
  color:white;
  text-align: center;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  display: block;
}

.back:active{
  filter: brightness(0.7)
}