/* miniprogram/pages/order/order.wxss */
.wrap{
  display: flex;
  box-sizing: border-box;
  background: #f5f5f5;
  flex-direction: column;
}
.order-item{
  padding-left: 30rpx;
  padding-right: 30rpx;
  background: #fff;
  margin-top:30rpx;
  width:100%;
  height:400rpx;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}

.order-item:active{
  filter: brightness(0.7);
}

.title_header{
  padding-left: 10rpx;
  color:#aaa;
  display: block;
  font-size: 32rpx;
  border-bottom: 1px solid #f0f0f0;
  height:80rpx;
  line-height: 2.5;
}

.item_desc{
  height:210rpx;
  margin-top:30rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;  
  border-bottom: 1px solid #f0f0f0;
}

.item_desc image{
  width:150rpx;
  height:150rpx;
}

.title_items{
  font-size: 32rpx;
  color:#777;
  margin-bottom:10rpx;
  display: block;
}

.item-info{
  color:#aaa;
  line-height: 2.5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
}

.item-status{
  margin-right: 50rpx;
}

.hidden{
  display: none;
}

.noData{
  height:100vh;
  padding: 40rpx 0;
  color:#999;
  text-align: center;
}

.item_name{
  display: flex;
  flex-direction: column;
  height:100%;
}

.title_items{
  text-align: right
}